<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_second_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/digits_size"
        android:text=""/>

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/digits_size"
        android:text=""/>

    <TextView
        android:id="@+id/tv_first_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/digits_size"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_1"
            android:tag="1"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:id="@+id/btn_2"
            android:tag="2"
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:id="@+id/btn_3"
            android:tag="3"
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>


        <Button
            android:id="@+id/btn_plus"
            android:tag="+"
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_4"
            android:tag="4"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:id="@+id/btn_5"
            android:tag="5"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:id="@+id/btn_6"
            android:tag="6"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>


        <Button
            android:id="@+id/btn_minus"
            android:tag="-"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_7"
            android:tag="7"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:text="8"
            android:id="@+id/btn_8"
            android:tag="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:id="@+id/btn_9"
            android:tag="9"
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>


        <Button
            android:id="@+id/btn_multiply"
            android:tag="*"
            android:text="*"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_delete"
            android:tag="del"
            android:text="--"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:id="@+id/btn_0"
            android:tag="0"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

        <Button
            android:id="@+id/btn_dot"
            android:tag="."
            android:text="."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>


        <Button
            android:id="@+id/btn_divide"
            android:tag="/"
            android:text="/"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/buttons_size"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_solve"
        android:tag="="
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_size"
        android:text="="/>

</LinearLayout>